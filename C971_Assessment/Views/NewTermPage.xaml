<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="C971_Assessment.Views.NewTermPage"
             BackgroundColor="#FFF">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="saveBtn" Text="Save" Clicked="saveBtn_Clicked" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="titleEntry" MaxLength="250" Placeholder="Enter Term Title" TextColor="Black"/>
            <DatePicker x:Name="startDatePicker" TextColor="Black"/>
            <DatePicker x:Name="endDatePicker" TextColor="Black"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>